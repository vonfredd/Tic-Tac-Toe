<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iths.tictactoe.HelloController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <top>
        <VBox alignment="CENTER" style="-fx-background-color: blue; ">
            <Label text="TicTacToe" style ="-fx-font-size: 50px; " />
        </VBox>
    </top>

    <bottom>
        <VBox alignment="CENTER" style="-fx-background-color: green;">
            <Button fx:id="buttonBottom"  text="Hello!" />
        </VBox>
    </bottom>

    <center>
            <TilePane maxWidth="360" maxHeight="300" style="-fx-background-color: Black; -fx-alignment: center; -fx-hgap: 5px; -fx-vgap: 5px;">
                <Button fx:id="b1" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40;">1 </Button>
                <Button fx:id="b2" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40;">2 </Button>
                <Button fx:id="b3" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40;">3 </Button>
                <Button fx:id="b4" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40;">4 </Button>
                <Button fx:id="b5" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40;">5 </Button>
                <Button fx:id="b6" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40;">6 </Button>
                <Button fx:id="b7" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40;">7 </Button>
                <Button fx:id="b8" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40;">8 </Button>
                <Button fx:id="b9" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40;">9 </Button>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
            </TilePane>

    </center>

    <left>
        <VBox alignment="CENTER"  style="-fx-background-color: pink;">
            <Button fx:id="buttonLeft" text="Hello!" />
        </VBox>
    </left>

    <right>
        <VBox alignment="CENTER" style="-fx-background-color: yellow;">
            <Button fx:id="buttonRight" text="Hello!" />
        </VBox>
    </right>
</BorderPane>
