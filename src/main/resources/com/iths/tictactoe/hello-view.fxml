<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iths.tictactoe.HelloController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <top>
        <VBox alignment="CENTER" style="-fx-background-color: blue; ">
            <Label style="-fx-font-size: 50px; " text="TicTacToe" />
            <Label visible="false" fx:id="winnerName" style="-fx-font-size: 50px; -fx-text-fill: red;" />
        </VBox>
    </top>

    <bottom>
        <VBox alignment="TOP_CENTER" style="-fx-background-color: green;">
            <Button fx:id="buttonBottom" text="Hello!" />
        </VBox>
    </bottom>

    <center>
            <TilePane fx:id="pane" maxHeight="300" maxWidth="360" style="-fx-background-color: Black; -fx-alignment: center; -fx-hgap: 5px; -fx-vgap: 5px;">
                <Button fx:id="b1" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40; -fx-background-color: lightgrey;" > </Button>
                <Button fx:id="b2" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40; -fx-background-color: lightgrey;"> </Button>
                <Button fx:id="b3" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40; -fx-background-color: lightgrey;"> </Button>
                <Button fx:id="b4" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40; -fx-background-color: lightgrey;"> </Button>
                <Button fx:id="b5" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40; -fx-background-color: lightgrey;"> </Button>
                <Button fx:id="b6" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40; -fx-background-color: lightgrey;"> </Button>
                <Button fx:id="b7" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40; -fx-background-color: lightgrey;"> </Button>
                <Button fx:id="b8" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40; -fx-background-color: lightgrey;"> </Button>
                <Button fx:id="b9" minHeight="100" minWidth="113" onMouseClicked="#setXandO" style="-fx-font-size: 40; -fx-background-color: lightgrey;"> </Button>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
            </TilePane>

    </center>

    <left>
        <VBox minWidth="150" alignment="CENTER" style="-fx-background-color: pink;">
            <Button minHeight="100" minWidth="100" onMouseClicked="#resetGame" fx:id="buttonLeft" text="RESET GAME!" />
        </VBox>
    </left>

    <right>
        <VBox minWidth="150" alignment="CENTER" style="-fx-background-color: yellow;">
            <Button fx:id="buttonRight" text="Hello!" />
        </VBox>
    </right>
</BorderPane>
